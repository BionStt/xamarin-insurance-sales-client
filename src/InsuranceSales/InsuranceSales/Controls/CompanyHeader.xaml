<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsuranceSales.Controls.CompanyHeader">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0, 10, 0, 10">
        <BoxView HeightRequest="40" WidthRequest="40" Color="{StaticResource CompanyLogoColor}" />
        <BoxView WidthRequest="1" Color="{StaticResource SeparatorLineColor}" />
        <Label Text="An Insurance Company" Style="{StaticResource CompanyHeaderStyle}"/>
    </StackLayout>
</ContentView>
