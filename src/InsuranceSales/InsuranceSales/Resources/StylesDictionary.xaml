<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsuranceSales.Resources.StylesDictionary">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="./ColorsDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Shell">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        <Setter Property="ForegroundColor" Value="{StaticResource CompanyHeaderColor}" />
        <Setter Property="TabBarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
        <Setter Property="TabBarForegroundColor" Value="{StaticResource CompanyHeaderColor}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource CompanyHeaderColor}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundColor}" />
        <Setter Property="TextColor" Value="{StaticResource ContentTextColor}" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="PlaceholderColor" Value="{StaticResource PlaceholderTextColor}" />
    </Style>

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource CompanyLogoColor}" />
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
    </Style>

    <Style x:Key="CompanyHeaderStyle" TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="Large" />
        <Setter Property="TextColor" Value="{StaticResource CompanyHeaderColor}" />
    </Style>

    <Style x:Key="TitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{OnPlatform iOS=Header, Android=Medium}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <Style x:Key="DescriptionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="Large" />
        <Setter Property="TextColor" Value="White" />
    </Style>
</ResourceDictionary>
