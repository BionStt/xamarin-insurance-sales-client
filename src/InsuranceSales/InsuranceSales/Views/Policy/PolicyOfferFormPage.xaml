<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
        x:TypeArguments="vm:PolicyOfferFormViewModel" 
        xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:vm="clr-namespace:InsuranceSales.ViewModels.Policy;assembly=InsuranceSales"
        xmlns:views="clr-namespace:InsuranceSales.Views"
        xmlns:controls="clr-namespace:InsuranceSales.Controls"
        xmlns:d="http://xamarin.com/schemas/2014/forms/design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resources="clr-namespace:InsuranceSales.i18n;assembly=InsuranceSales.i18n"
        x:Class="InsuranceSales.Views.Policy.PolicyOfferFormPage"
        mc:Ignorable="d"
        Visual="Material"
        Title="{Binding ProductName}">
    <views:ContentPageBase.BindingContext>
        <vm:PolicyOfferFormViewModel />
    </views:ContentPageBase.BindingContext>
    <views:ContentPageBase.Content>
        <StackLayout>
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />

            <Grid IsVisible="{Binding IsNotBusy}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ScrollView Grid.Row="1">
                    <StackLayout x:Name="AnswerEntries">

                        <DatePicker x:Name="PolicyFromPicker" DateSelected="PolicyFromPicker_OnDateSelected" />

                        <DatePicker x:Name="PolicyToPicker" DateSelected="PolicyToPicker_OnDateSelected" />

                        <controls:DynamicEntriesView x:Name="DynamicEntries" BindingContext="{Binding DynamicEntriesViewModel}" 
                                                     IsVisible="{Binding IsNotBuying}" />

                        <!-- ADDRESS/PERSON ENTRIES HERE -->
                        <StackLayout IsVisible="{Binding IsBuying}">
                            <Entry x:Name="PersonName" />
                            <Entry x:Name="PersonSurname" />
                        </StackLayout>

                    </StackLayout>
                </ScrollView>

                <StackLayout Grid.Row="2" HorizontalOptions="CenterAndExpand">

                    <BoxView Color="{StaticResource CompanyLogoColor}" Height="2" />
                    <Label Text="{Binding Offer.TotalPrice}" FontSize="Subtitle" 
                           IsVisible="{Binding IsOffering}" />

                    <Button Text="{x:Static resources:Labels.Order}" Clicked="Order_OnClicked"
                            IsEnabled="{Binding IsNotBusy}" />

                    <Button Text="{x:Static resources:Labels.ChangeParameters}"
                            IsEnabled="{Binding IsOffering}" 
                            IsVisible="{Binding IsOffering}" />

                    <Button Text="{x:Static resources:Labels.BuyNow}" Clicked="BuyNow_OnClicked"
                            IsEnabled="{Binding IsOffering}"
                            IsVisible="{Binding IsOffering}" />

                </StackLayout>

            </Grid>
        </StackLayout>
    </views:ContentPageBase.Content>
</views:ContentPageBase>