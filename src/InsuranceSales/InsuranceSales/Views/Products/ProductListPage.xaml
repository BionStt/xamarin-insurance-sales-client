<?xml version="1.0" encoding="UTF-8" ?>
<views:ContentPageBase
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:design="clr-namespace:InsuranceSales"
    xmlns:vm="clr-namespace:InsuranceSales.ViewModels"
    xmlns:views="clr-namespace:InsuranceSales.Views"
    xmlns:controls="clr-namespace:InsuranceSales.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="InsuranceSales.Views.Products.ProductListPage"
    x:TypeArguments="vm:ProductListViewModel"
    mc:Ignorable="d"
    Visual="Material"
    BackgroundColor="White">
    <views:ContentPageBase.BindingContext>
        <vm:ProductListViewModel />
    </views:ContentPageBase.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:CompanyHeader Grid.Row="0" />

        <BoxView Grid.Row="1" 
                 HeightRequest="1" 
                 Color="{StaticResource Key=SeparatorLineColor}" />

        <ActivityIndicator Grid.Row="2" 
                           IsVisible="{Binding IsBusy}" 
                           IsRunning="{Binding IsBusy}" />

        <ListView Grid.Row="2" Footer=""
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand"
                  ItemsSource="{Binding Products}" 
                  ItemSelected="ListView_OnItemSelected"
                  HasUnevenRows="True"
                  SeparatorVisibility="None">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Image Grid.Row="0" 
                                       Grid.Column="0" Grid.ColumnSpan="2" 
                                       d:Source="homeInsurance.jpg" />

                                <BoxView Grid.Row="0"
                                         Grid.Column="0" Grid.ColumnSpan="2" 
                                         HeightRequest="24" 
                                         Color="#586F80" 
                                         Opacity=".3" />

                                <StackLayout Grid.Row="0"
                                             Grid.Column="0" Grid.ColumnSpan="2" 
                                             Margin="20">

                                    <Label Style="{StaticResource Key=TitleStyle}"
                                           Text="{Binding Name}" />

                                    <Label Style="{StaticResource Key=DescriptionStyle}"
                                           Text="{Binding Description}" />
                                </StackLayout>

                                <Button Grid.Row="1" Grid.Column="1"
                                        Text="Buy Now" />
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</views:ContentPageBase>
